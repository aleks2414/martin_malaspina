<!DOCTYPE html>
<html>
<head>
  <title>Pruebas</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://use.fontawesome.com/8e56b09395.js"></script>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
</head>
<body>

<% if alert %>
	<p class="alert"><%= alert %></p>
<% elsif notice %>
	<p class="notice"><%= notice %></p>
<% end %>


<div class="col-md-8 col-md-offset-2">
  <div id="formario">

<div id="links">
	<ul>
		<% if user_signed_in? %>
  <li>
    <%= link_to "Inicio", root_path %>
  </li>
 <li>
 	<%= link_to "Nueva prueba", new_test_path %>
 </li>
 <li>
 	<%= link_to "Importar", "#Photo2Modal", "data-toggle" => "modal" %>
 </li>
		<li><a href="<%= destroy_user_session_path %>" data-method='delete'>
 Salir
 </a></li>
		<% else %>
	<li><a href="<%= new_user_session_path %>"> Login </a></li>
		<% end %>
	</ul>
</div>


<%= yield %>


<!-- Modal -->
<div class="modal fade" id="Photo2Modal" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal">&times;</button>

<h3>Importar pruebas</h3>

<%= form_tag import_tests_path, multipart: true do %>
  <%= file_field_tag :file %> <br>
  <%= submit_tag "Import", class: "button button_red" %>
<% end %>

            </div>
        </div>
    </div>
</div>
<!--  -->

</div>
</div>

</body>
</html>
