
<br><br>
<%= search_form_for @q do |f| %>
<h3>Busqueda:</h3>
<%= f.search_field :nombre_or_colegio_cont, placeholder: "Buscar por Nombre Alumno o Colegio", class: "new"  %>


<%= f.submit "Buscar", class: "button button_red" %>
<%= link_to "Borrar Filtros", root_path, class: "button button_red" %>
<% end %>

<hr>


<h3>Pruebas:</h3>
<div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Numeraci√≥n</th>
      <th>Nombre</th>
      <th>Colegio</th>
      <th>Nivel</th>
      <th>Seccion</th>
      <th>Edad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.id %></td>
        <td><%= test.nombre %></td>
        <td><%= test.colegio %></td>
        <td><%= test.nivel %></td>
        <td><%= test.seccion %></td>
        <td><%= test.edad %> meses</td>
        <td><%= link_to 'Ver', test_path(test, :format => 'pdf'), :target => "_blank" %></td>
        <td><%= link_to 'Editar', edit_test_path(test) %></td>
        <td><%= link_to 'Eliminar', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>


  </tbody>
</table>
</div>
    <%= will_paginate @tests %>

